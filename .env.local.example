# Next.js local environment example
# Copy this file to `.env.local` and fill in real values
# Server-side secrets should NOT be prefixed with NEXT_PUBLIC_

# Azure OpenAI (required)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Apollo (required)
APOLLO_API_KEY=your_apollo_api_key

# Snov.io (optional but recommended for prospects/technologies)
# Used by `lib/agent-architecture/tools/snov-tool.ts` and `/api/enrich`
SNOV_CLIENT_ID=your_snov_client_id
SNOV_CLIENT_SECRET=your_snov_client_secret

# Upstash Redis (optional; enables rate limiting in production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Optional client-side toggles (example)
# NEXT_PUBLIC_ENABLE_METRICS=true